<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiacorp.androidexample3.MainActivity"
    android:orientation="vertical"
    android:padding="@dimen/app_global_side_padding"
    >

    <Button
        android:id="@+id/main_sso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SSO"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/main_morphing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Morphing Toolbar"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/main_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Progress Bar"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/main_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Network Calls"
        android:textSize="20sp"
        />

</LinearLayout>