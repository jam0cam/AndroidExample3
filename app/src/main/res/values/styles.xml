<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"  parent="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="search_facet_style" parent="Widget.MaterialComponents.Chip.Action">
        <!--        TODO: JIA: supply statelists for background, colors, etc.-->
    </style>

    <style name="search_facet_text_style" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="SmallText.Bold">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/navy</item>
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="search_form_group">
        <item name="android:clickable">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">@dimen/search_form_group_height</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingLeft">@dimen/app_global_side_padding</item>
        <item name="android:paddingRight">@dimen/app_global_side_padding</item>
    </style>

    <style name="search_form_value">
        <item name="android:textColor">@color/navy</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/navy</item>
        <item name="android:layout_marginBottom">@dimen/app_global_side_half_padding</item>
        <item name="android:layout_marginTop">@dimen/app_global_side_half_half_padding</item>
    </style>

</resources>
